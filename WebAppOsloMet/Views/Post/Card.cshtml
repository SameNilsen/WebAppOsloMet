@model PostListViewModel

<h1 style="text-align:center;">Main Feed</h1>

<div class="container" style="text-align:center">
    <a class="btn btn-secondary"
        asp-controller="Post"
        asp-action="Create">Create new Post</a>
    <a class="btn btn-secondary" href="/Post/Posts">Classic view</a>
</div>

<div>
    @foreach (var post in Model.Posts)
    {
        <partial name="_PostsCard" model="post" />
    }
</div>