@model Post

<h2>Edit your post</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Update">
    <input type="hidden" asp-for="PostID" />
    @* <input type="hidden" asp-for="@Model.User" /> *@
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="SubForum" />
    @* <input type="hidden" asp-for="Comments" /> *@
    <input type="hidden" asp-for="PostDate" />
    <input type="hidden" asp-for="UpvoteCount" />
    @* <input type="hidden" asp-for="UserVotes" /> *@
    <div class="form-group">
        <label asp-for="Title">Title</label><span class="text-danger">*</span>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text">Text</label><span class="text-danger">*</span>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Image</label>
        <input asp-for="ImageUrl" placeholder="/images/..." class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <br />
    <a asp-action="DetailedPost" asp-route-id="@Model.PostID" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>


