@model Post

<h2>Update Post</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Update">
    <input type="hidden" asp-for="PostID" />
    @* <input type="hidden" asp-for="@Model.User" /> *@
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="SubForum" />
    @* <input type="hidden" asp-for="Comments" /> *@
    <input type="hidden" asp-for="PostDate" />
    <input type="hidden" asp-for="UpvoteCount" />
    @* <input type="hidden" asp-for="UserVotes" /> *@
    <div class="form-group">
        <label asp-for="Title"></label><span class="text-danger">*</span>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text"></label><span class="text-danger">*</span>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save changes</button>
    <a asp-action="DetailedPost" class="btn btn-secondary">Cancel</a>
</form>


