@model IEnumerable<Post>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    /* Style buttons, from https://www.w3schools.com/howto/howto_css_icon_buttons.asp */
    .btn-arrow-up {
        color: black; /* White text */
        padding: 12px 16px; /* Some padding */
        font-size: 16px; /* Set a font size */
        cursor: pointer; /* Mouse pointer on hover */
    }

    .btn-arrow-down {
        color: black; /* White text */
        padding: 12px 16px; /* Some padding */
        font-size: 16px; /* Set a font size */
        cursor: pointer; /* Mouse pointer on hover */
    }
        /* Red background on mouse-over */
        .btn-arrow-up:hover {
            color: rgb(193, 26, 26);
        }

    /* blue background on mouse-over */
    .btn-arrow-down:hover {
        color: rgb(20, 130, 167);
    }
</style>

<div class="container" style="text-align:center">
    <div>
        <a class="btn btn-secondary"
            asp-controller="Post"
            asp-action="Create">Create new Post</a>
        <a class="btn btn-secondary" href="/Post/Card">Card view</a>
    </div>
    <h1>@ViewBag.CurrentViewName</h1>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>PostDate</th>
            <th>User</th>
            <th>Image</th>
            <th>Actions</th>
            <th>Votes</th>
        </tr>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.PostID</td>
                <td>
                    <a asp-controller="Post"
                       asp-action="DetailedPost"
                       asp-route-id="@post.PostID">@post.Title</a>
                </td>
                @* Det over her er en link til detailed view av en post. *@
                <td>@post.PostDate</td>
                <td>@post.User.Name</td>
                <td>
                    <img src="@post.ImageUrl" alt="Post image" style="max-width: 80px; max-height: 80px;" />
                </td>
                <td>
                    
                    <a class="btn-arrow-up" asp-action="UpVote" asp-route-id="@post.PostID"><i class="fa fa-arrow-up"></i></a>
                    <a class="btn-arrow-down" asp-action="DownVote" asp-route-id="@post.PostID"><i class="fa fa-arrow-down"></i></a>
                    <a class="btn btn-secondary" asp-controller="Post" asp-action="DetailedPost" asp-route-id="@post.PostID">Reply</a>
                </td>
                <td>@post.UpvoteCount</td>
            </tr>
        }
    </table>
</div>

