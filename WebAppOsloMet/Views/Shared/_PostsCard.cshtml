@model Post

<div style="max-width:750px; margin: 0 auto">
    <div>
        <img src="@Model.ImageUrl" style="max-width:750px; max-height:750px" class="card-img-top" alt="@Model.Title">
        <div>
            <div class="d-flex justify-content-between mt-2">
                <h5 class="text-start">
                    <a asp-controller="Post"
                       asp-action=  "DetailedPost"
                       asp-route-id="@Model.PostID">@Model.Title</a>
                </h5>
                <h5 class="text_nowrap">@Model.Text</h5>
            </div>
        </div>
    </div>
</div>


